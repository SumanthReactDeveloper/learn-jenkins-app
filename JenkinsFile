pipeline {
    agent any

    stages {
        stage('Install Dependencies') {
            steps {
                sh 'rm -rf node_modules'
                sh 'npm ci'
            }
        }
        stage('Build') {
            agent {
                docker {
                    image "node:18-alpine"
                    reuseNode true
                }
            }
            steps {
                sh '''
                  ls -la
                  node --version
                  npm --version
                  npm run build
                  ls -la
                '''
            }
        }
        stage('Test') {
            steps {
                sh 'echo "Testing Stage"' 
                sh 'test -f build/index.html'
            }
        }
    }
}